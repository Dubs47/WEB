{% extends "layouts/app.html.twig" %}

{% block title %}Registrace{% endblock %}

{% block content %}
    <form class="form-horizontal" method="post" action="{{ url('user', 'registerDo') }}">
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Email</label>
            <div class="col-sm-2">
                <input type="email" name="email" class="form-control" id="email" placeholder="Zadejte email">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="password">Heslo</label>
            <div class="col-sm-2">
                <input type="password" name="password" class="form-control" id="password" placeholder="Zadejte heslo">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="name">Jméno</label>
            <div class="col-sm-2">
                <input type="text" name="name" class="form-control" id="name" placeholder="Zadejte jméno">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="surname">Příjmení</label>
            <div class="col-sm-2">
                <input type="text" name="surname" class="form-control" id="surname" placeholder="Zadejte příjmení">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-2">
                <button type="submit" class="btn btn-default">Zaregistrovat se</button>
            </div>
        </div>
    </form>

    <div class="col-sm-offset-2 col-sm-2">
        <a href="{{ url('user', 'login') }}">Přihlašte se zde</a>
    </div>
{% endblock %}
