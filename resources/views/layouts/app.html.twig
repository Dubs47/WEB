<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{% block title %}Konference{% endblock %}</title>
    <link rel="stylesheet" type="text/css" href="node_modules/bootstrap3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="resources/css/app.css">
    <script src="node_modules/jquery/dist/jquery.min.js"></script>
    <script src="node_modules/bootstrap3/dist/js/bootstrap.min.js"></script>
</head>
<body>
<script src="resources/js/app.js"></script>
<div class="content-wrapper">
    {% include 'layouts/_nav.html.twig' %}
    <div class="login-status">
        {% if not isLogged() %}
            Nepřihlášen
        {% else %}
            {{ user.name }} {{ user.surname }}
            {% if user.role == '0' %}
                Role: Autor
            {% elseif user.role == '1' %}
                Role: Recenzent
            {% elseif user.role == '2' %}
                Role: Administrátor
            {% endif %}
        {% endif %}
    </div>
    <div class="container alerts">
        {% if alerts is not null %}
            {% for alert in alerts %}
                {% include 'layouts/_alert.html.twig' %}
            {% endfor %}
        {% endif %}
    </div>
    <div class="container">
        {% block content %}{% endblock %}
    </div>
</div>
{% include 'layouts/_footer.html.twig' %}
</body>
</html>