{% extends "layouts/app.html.twig" %}

{% block title %}Recenze{% endblock %}

{% block content %}
    <h1>Recenze: {{ request.articleName }}</h1>

    <br><a href="/upload/{{ request.articleFile }}" download="clanek.pdf">Stáhnout soubor</a>

    <form class="form-horizontal" method="post" action="{{ url('article', 'reviewDo') }}">
        <input type="hidden" name="request_id" value="{{ request.id }}">
        <div class="form-group">
            <label class="control-label col-sm-2" for="originality">Originalita</label>
            <div class="col-sm-3">
                <select class="form-control" id="originality" name="originality">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="quality">Kvalita</label>
            <div class="col-sm-3">
                <select class="form-control" id="quality" name="quality">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="recommendation">Doporučení</label>
            <div class="col-sm-3">
                <select class="form-control" id="recommendation" name="recommendation">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-2">
                <button type="submit" class="btn btn-default">Uložit</button>
            </div>
        </div>
    </form>
{% endblock %}