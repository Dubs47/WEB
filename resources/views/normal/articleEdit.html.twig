{% extends "layouts/app.html.twig" %}

{% block title %}Úprava článku{% endblock %}

{% block content %}
<form class="form-horizontal" method="post" action="{{ url('article', 'normalArticleEditDo', {article_id: article.id}) }}">
    <div class="form-group">
        <label class="control-label col-sm-2" for="name">Název článku</label>
        <div class="col-sm-6">
            <input type="text" name="name" class="form-control" id="name" value="{{ article.name }}">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="abstract">Abstract</label>
        <div class="col-sm-6">
            <textarea class="form-control" name="abstract" id="abstract">{{ article.abstract }}</textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2">
            <button type="submit" class="btn btn-default">Editovat</button>
        </div>
    </div>
</form>
{% endblock %}
